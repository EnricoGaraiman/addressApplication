{% extends 'base.html.twig' %}

{% block title %}Hi, {{ app.user.name }}{% endblock %}

{% block body %}
    <div class="container profile-data mt-5 pt-3">
        {% include 'partials/_alert_messages.html.twig' %}
        <div class="row">
            <div class="col-md">
                {% include 'profile/_my_profile.html.twig' %}
            </div>
            <div class="col-md">
                {% include 'profile/_my_default_address.html.twig' %}
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                {% include 'profile/_my_addresses.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#import_file_form_name').attr('accept', '.xls,.xlsx, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel');
        });
    </script>
{% endblock %}
