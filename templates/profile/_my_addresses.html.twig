<h1>My addresses</h1>
<form method="POST">
    <table class="table table-dark table-hover">
        <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">Address</th>
        </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for address in userAddresses %}
            {% set i = i + 1 %}
            <tr>
                <th scope="row">{{ i }}</th>
                <td>
                    <input type="checkbox" id="default-address" class="form-check-input" name="check[]"
                           value="{{ address.id }}">
                </td>
                <td>{{ address.city.country }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.address }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button type="submit" class="btn btn-success" name="set_default">Set default address</button>
    <button type="submit" class="btn btn-warning" name="update">Update address</button>
    <button type="submit" class="btn btn-danger" name="delete">Delete addresses</button>
    <a href="{{ path('add_new_address') }}" class="btn btn-light float-end">Add new address</a>
</form>
