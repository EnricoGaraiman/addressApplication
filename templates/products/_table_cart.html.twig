<div class="table-responsive mt-3">
    <table class="table table-dark table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Change</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for product in products %}
            {% set i = i + 1 %}
            <tr>
                <td>{{ i }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                {% for id, quantity in cart %}
                    {% if id == product.id %}
                        <td>
                            <input type="number" class="form-control m-0 cart-quantity-select"
                                   id="quantity{{ product.id }}" name="quantity" min="1" max="100"
                                   value="{{ quantity }}">
                        </td>
                        <td>
                            <button class="btn btn-warning" onClick="modifyQuantity({{ product.id }})">
                                <i class="far fa-dot-circle"></i></button>
                        </td>
                    {% endif %}
                {% endfor %}
                <td>
                    <button class="btn btn-danger" onClick="deleteItemFromCart({{ product.id }})">
                        <i class="fas fa-trash-alt"></i></button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>