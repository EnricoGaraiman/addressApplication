<div class="black-bg">
    {{ form_start(form) }}
    <h1>Update address</h1>
    {{ form_row(form.country, {'attr': {'class': 'form-control', 'value': address.country }}) }}
    {{ form_row(form.city, {'attr': {'class': 'form-control', 'value': address.city }}) }}
    {{ form_row(form.address, {'attr': {'class': 'form-control', 'value': address.address }}) }}
    {{ form_row(form.default, { 'label': 'Set default address',
        'attr': {'class': 'form-check-input mx-2'}}) }}
    {{ form_row(form.add, { 'attr': {'class': 'form-control btn btn-dark mt-2 d-none'},
        label: 'Update address'
    }) }}
    <button type="submit" class="btn btn-dark mt-2" name="update_address">Update address</button>
    <a href="{{ path('profile') }}" class="btn btn-outline-light mt-2 float-end">Back to profile</a>
    {{ form_end(form) }}
    {{ form_end(form) }}
</div>