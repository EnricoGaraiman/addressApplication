{% extends 'base.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}

    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div>
            {% include 'partials/_alert_messages.html.twig' %}
            {% if message.message == '' or message.message == 'Password dont match' %}
            {{ form_start(form) }}
            <h1>Type your email address</h1>
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.passwordcheck, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.change, {'attr': {'class': 'form-control btn btn-dark mt-2'}}) }}
            {{ form_end(form) }}
            {% endif %}
        </div>
    </div>

{% endblock %}
